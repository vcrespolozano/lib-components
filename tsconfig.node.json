{
  "compilerOptions": {
    "target": "ES2022", // Para el entorno Node.js
    "module": "ESNext", // Módulo ESNext para optimización
    "moduleResolution": "bundler", // Resolución de módulos estilo Node.js
    "skipLibCheck": true, // No chequear tipos en dependencias externas
    "noEmit": true, // No emitir archivos (solo validar)
    "strict": true, // Activar modo estricto
    "lib": ["ES2023"], // Librerías utilizadas para Node.js
    "isolatedModules": true,
    "allowImportingTsExtensions": true
  },
  "include": ["vite.config.ts"]
}
